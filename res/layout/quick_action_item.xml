<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/quick_action_row_height"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/quick_action_item_btn">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/icon" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent"
            android:paddingLeft="5dip"
            android:layout_gravity="center_vertical"/>

        <TextView 
            android:id="@+id/title"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="10dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"/>

    </LinearLayout>
    
    <!-- optional bottom separator, to be shown only if this item is not the last one of the popup -->
    <ImageView 
            android:id="@+id/bottom_separator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:gravity="fill_horizontal"
            android:src="@drawable/quick_action_item_separator"/>

</LinearLayout>
